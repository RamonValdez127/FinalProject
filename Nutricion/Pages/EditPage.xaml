<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nutricion.EditPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            
            <Button
                x:Name="backToPlaylist"
                Text="Click to go back to playlist"
                Clicked="backToPlaylist_Clicked"
                HorizontalOptions="Start" />

            <Label
                Text="Edita la cancion de tu playlist!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Entry x:Name="songName" Placeholder="Título de la canción"/>

            <Entry x:Name="albumCoverLink" Placeholder="Link de la imagen de la canción"/>

            <Entry x:Name="artistName" Placeholder="Nombre del artista"/>

            <Entry x:Name="songDuration"
                   Placeholder="Duración de la canción" Keyboard="Numeric"/>

            <Button
                x:Name="EditBtn"
                Text="Actualizar la Playlist!"
                Clicked="EditBtnClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
